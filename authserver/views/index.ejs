<%- include('../templates/head') %>

<h1>Avaliable Ruqqus Sites</h1>

<% if (user) { %>
<div class="card" style="margin-bottom: 1em; width: min(6cm, 100%);">
  <h4 style="margin: 1%;">Add a new site</h4>
  <form action="/sites/new" method="POST">
    <input type="text" placeholder="Name" name="name" required autocomplete="off"/>
    <input type="text" placeholder="Domain (e.g. ruqqus.com)" name="domain" required autocomplete="off"/>
    <input type="text" placeholder="Client ID" name="clientID" required autocomplete="off" autocapitalize="off"/>
    <input type="password" placeholder="Client Secret" name="clientSecret" required autocomplete="off" autocapitalize="off"/>
    <input type="submit" />
  </form>
</div>
<% } %>

<br />

<table>
  <tr>
    <th>Domain</th>
    <th>Auth Link</th>
    <th>ClientID</th>
  </tr>
  <% for (let site of sites) { %>
    <tr>
      <td><a href="https://<%= site.domain %>"><%= site.name %></a></td>
      <td><a href="/auth/<%= site._id %>">Example link</a></td>
      <td><%= site.clientID %></td>
    </tr>
  <% } %>
</table>


<%- include('../templates/foot') -%>